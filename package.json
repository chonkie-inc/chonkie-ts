{
  "name": "chonkie-main",
  "version": "0.3.0",
  "private": true,
  "description": "Monorepo for Chonkie - lightweight and efficient text chunking library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chonkie-inc/chonkie-ts.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf packages/*/dist",
    "build": "npm run clean && npm run build --workspaces",
    "test": "npm run test --workspaces",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "dotenv": "^16.5.0",
    "jest": "^29.5.0",
    "publint": "^0.3.14",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
